<%= form_with model: @work_experience do |f|%>
  <div class="modal-body">
    <div class='row'>
      <% if @work_experience.errors.any?%>
        <div class='error-area' style='color:red'>
          <h3><%= pluralize(@work_experience.errors.count, 'error')%> prohibited your work experience from being saved.</h3>
          <ul>
            <% @work_experience.errors.each do |error|%>
              <li><%= error.full_message%></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class='col-lg-12'>
        <div class='form-group'>
          <label class='mb-2 mt-3'>
            Title
            <span class='text-denger'>*</span>
          </label>
          <%= f.text_field :job_title, class: 'form-control'%>
        </div >
        <div class='form-group'>
          <label class='mb-2 mt-3'>
            Company
            <span class='text-denger'>*</span>
          </label>
          <%= f.text_field :company, class: 'form-control'%>
        </div >
        <div class='form-group'>
          <label class='mb-2 mt-3'>
            Employment Type
            <span class='text-denger'>*</span>
          </label>
          <%= f.select :employment_type, options_for_select(WorkExperience::EMPLOYMENT_TYPE),{prompt: 'Select Employment Type'} ,{class: 'form-select'}%>
        </div >
        <div class='form-group'>
          <label class='mb-2 mt-3'>
            Location            
            <span class='text-denger'>*</span>
          </label>
          <%= f.text_field :location, class: 'form-control'%>
        </div >
        <div class='form-group'>
          <label class='mb-2 mt-3'>
            Location Type
            <span class='text-denger'>*</span>
          </label>
          <%= f.select :location_type, options_for_select(WorkExperience::LOCATION_TYPE),{prompt: 'Select Location Type'} ,{class: 'form-select'}%>
        </div >
        <div class='form-group row'>
          <div class='col-lg-6'>
            <label class='mb-2 mt-3'>Start Date
              <span class='text-danger'>*</span>
            </label>
            <%= f.date_field :start_date, class: 'form-control'%>
          </div >
          <div class='col-lg-6'>
            <label class='mb-2 mt-3'>End Date
              <span class='text-danger'>*</span>
            </label>
            <%= f.date_field :end_date, class: 'form-control'%>
          </div >
          <div class='col-lg-6'>
            <div class='form-check form-switch mb-2 mt-3'>
              <%= f.check_box :currently_working_here, class: 'form-check-input', role: 'switch'%>
              <label class='form-check-label' for='currently_working_here'>I am currently working here</label>
            </div>
          </div>
        </div>
        <div class='form-group'>
          <label class='mb-2 mt-3'>
            Description            
          </label>
          <%= f.text_area :description, class: 'form-control', rows: 5%>
        </div >
      </div >
    </div>
  </div>
  <div class='modal-footer'>
    <%= f.submit "Save Changes", data: {action: "click->bs-modal#submitEnd"}, class: 'btn btn-primary'%>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
