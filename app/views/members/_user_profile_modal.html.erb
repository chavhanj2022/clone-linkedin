<%= turbo_frame_tag :remote_modal, target: :top do %>
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="bs-modal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Edit your Profile</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with model: current_user, url: update_profile_path, method: :patch do |f|%>
          <div class="modal-body">
            <div class="row mb-3">
              <div class="col-lg-4">
                <div class="form-group">
                  <label class="form-label">First Name</label>
                  <%= f.text_field :first_name, class: "form-control"%>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-group">
                  <label class="form-label">Last Name</label>
                  <%= f.text_field :last_name, class: "form-control"%>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-group">
                  <label class="form-label">Profile Title</label>
                  <%= f.text_field :profile_title, class: "form-control"%>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-label">City</label>
                  <%= f.text_field :city, class: "form-control"%>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-label">State</label>
                  <%= f.text_field :state, class: "form-control"%>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-label">Country</label>
                  <%= f.text_field :country, class: "form-control"%>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-label">Pin code</label>
                  <%= f.text_field :pincode, class: "form-control"%>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "Save Changes", data: {action: "click->bs-modal#submitEnd"}, class: 'btn btn-primary'%>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
