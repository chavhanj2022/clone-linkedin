<div class="col-lg-10 mx-auto mt-5">
  <div class="card mb-5">
    <div class="row">
      <div class="col-lg-4">
        <%= image_tag "dummy_user", class:"image-fluid", style: "width: 150px; border: 2px solid #0d6efd;"%>
      </div>
      <div class="col-lg-8">
        <%= render 'user_profile', user: @user%>
      </div>
    </div>
  </div>
  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <div class="d-flex justify-content-start">
            <h3 class="">About</h3>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="d-flex justify-content-end">
            <%# <h3 class="">About</h3> %>
            <% if user_signed_in? && current_user == @user%>
              <%= link_to edit_memeber_description_path,  data:{controller: "bs-modal-form"} do%>
                <i class="bi bi-pencil"></i>
              <% end%>
            <% end %>
          </div>
        </div>
      </div>
      <%= render 'member_description', user: @user%>
    </div>
  </div>
  <div class='card mb-5'>
    <div class='card-body'>
      <% if user_signed_in? && @user == current_user%>
        <div class='row'>
          <div class='col-lg-4'>
            <div class='d-flex justify-content-start'>
              <h3>Work Experience</h3>
            </div >
          </div >
          <div class='col-lg-4'>
            <div class='d-flex justify-content-end'>
              <%= link_to new_work_experience_path, data: {controller: 'bs-modal-form'} do %>
                <i class='bi bi-plus'></i> Add Experience
              <% end %>
            </div >
          </div >
          <% if @user.work_experiences.present?%>
            <div class='col-lg-4'>
              <div class='d-flex justify-content-end'>
                <%= link_to 'javascript:void(0)' do %>
                  <i class='bi bi-plus'></i> Edit Experiences
                <% end %>
              </div >
            </div >
          <% end %>
        </div >
      <% end %>
      <% if @user.work_experiences.present?%>
        <ul class="list-group" id="work_experience_items">
          <% @user.work_experiences.each do |work_experience|%>
            <%= render 'work_experiences/work_experience', work_experience: work_experience%>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div >
</div>
