<div class="col-lg-10 mx-auto mt-5">
  <div class="card mb-5">
    <div class="row">
      <div class="col-lg-4">
        <%= image_tag "dummy_user", class:"image-fluid", style: "width: 150px; border: 2px solid #0d6efd;"%>
      </div>
      <div class="col-lg-8">
        <div class="card-boy">
          <h3 class="fw-bold"><%= @user.name%></h3>
          <p class="lead"><%= @user.profile_title%></p>
          <p class="lead text-primary"><%= @user.address%></p>
        </div>
      </div>
    </div>
  </div>
  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <div class="d-flex justify-content-start">
            <h3 class="">About</h3>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="d-flex justify-content-end">
            <%# <h3 class="">About</h3> %>
          </div>
        </div>
      </div>
      <p class="lead "><%= @user.about%></p>
    </div>
  </div>
</div>
