 <%= form_with model: current_user, url:update_member_description_path, method: :patch do |f|%>
  <div class="modal-body">
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <label>Edit your description here. Try to keep it simple and clean</label>
          <%= f.text_area :about, value: current_user.about, class:"form-control", rows: 15%>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save Changes", data: {action: "click->bs-modal#submitEnd"}, class: 'btn btn-primary'%>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
